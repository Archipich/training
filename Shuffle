using System;

namespace Shuffle
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isWorking = true;
            string userInput;
            string exit = "exit";

            int[] arrayShuffle = new int[6];

            RandomizeArray(arrayShuffle);

            while (isWorking == true)
            {
                ShowArray(arrayShuffle);
                Console.WriteLine($"\nНажмите Enter  чтобы перемешать массив и введите {exit} чтобы выйти");
                userInput = Console.ReadLine();
                
                if (userInput == exit)
                {
                    isWorking = false;
                }
                else
                {
                    Shuffle(arrayShuffle);
                    ShowArray(arrayShuffle);
                }

                Console.ReadLine();
                Console.Clear();
            }

            Console.WriteLine("До новых встреч");
        }

        static void RandomizeArray(int[] array)
        {
            int arrayMaximum = 20;
            int arrayMinimum = 0;

            Random random = new Random();

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(arrayMinimum, arrayMaximum + 1);
            }

        }

        static void Shuffle(int[] array)
        {
            Random random = new Random();

            for (int i = 0; i < array.Length; i++)
            {
                int numberIndex = random.Next(array.Length);
                int tempNumber = array[i];
                array[i] = array[numberIndex];
                array[numberIndex] = tempNumber;
            }
        }

        static void ShowArray(int[] array)
        {
            for (int i = 0; i < array.Length; i++)
            {
                Console.Write(array[i] + " ");
            }
        }
    }
}

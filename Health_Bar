using System;

namespace Health_Bar
{
    class Program
    {
        static void Main(string[] args)
        {
            int healthPercent = 100;
            int maximumHealth = 10;
            int mannaPercent = 70;
            int maximumManna = 10;
            int healthPosition = 0;
            int mannaPosition = 1;
            float healt;
            float manna;

            healt = Percent(healthPercent);
            manna = Percent(mannaPercent);

            DrawBar(healt, maximumHealth, ConsoleColor.Red, healthPosition);
            
            DrawBar(manna, maximumManna, ConsoleColor.Green, mannaPosition);
        }

        static void DrawBar(float value, float maximumValue,ConsoleColor color, int position, char symbol= '#')
        {
            if (maximumValue >= value)
            {

                ConsoleColor defultColor = Console.BackgroundColor;

                string bar = "";
                char startBar = '[';
                char endBar = ']';
                char symbol1 = ' ';

                CompletionBar(value, ref bar, symbol);

                Console.SetCursorPosition(0, position);
                Console.Write(startBar);
                Console.BackgroundColor = color;
                Console.Write(bar);
                Console.BackgroundColor = defultColor;

                bar = "";

                CompletionBar(maximumValue, ref bar, symbol1, value);

                Console.Write(bar + endBar);
            }
            else
            {
                Console.WriteLine("Вы ввели неверные значения");
            }
        }

        static void CompletionBar(float value, ref string bar, char symbol, float value2 = 0)
        {
            for (float i = value2; i < value; i++)
            {
                bar += symbol;
            }
        }

        static float Percent(float number)
        {
            float namberInt;
            namberInt = number / 10;
            return namberInt;
        }
    }
}

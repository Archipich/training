using System;

namespace Health_Bar
{
    class Program
    {
        static void Main(string[] args)
        {
            int health = 3;
            int maximumHealth = 10;
            int manna = 7;
            int maximumManna = 10;
            int healthPosition = 0;
            int mannaPosition = 1;
            
            DrawBar(health, maximumHealth, ConsoleColor.Red, healthPosition);
            
            DrawBar(manna, maximumManna, ConsoleColor.Green, mannaPosition);
        }

        static void DrawBar(int value, int maximumValue,ConsoleColor color, int position, char symbol= '#')
        {
            ConsoleColor defultColor = Console.BackgroundColor;

            string bar = "";

            for (int i = 0; i < value; i++)
            {
                bar += symbol;
            }

            Console.SetCursorPosition(0, position);
            Console.Write('[');
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = defultColor;

            bar = " ";
            
            for (int i = value; i < maximumValue; i++)
            {
                bar += " ";
            }

            Console.Write(bar + ']');
        }
    }
}

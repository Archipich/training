using System;

namespace TryParse
{
    class Program
    {
        static void Main(string[] args)
        {
            int userNumber = 0;
            ReadInt(ref userNumber);
            Console.WriteLine($"Число пользователя {userNumber}");
        }

        static void ReadInt(ref int number)
        {
            string userInput;
            int userNumber = 0;
            bool isCorrecting = false;

            while (isCorrecting == false)
            {
                Console.Write("Пожалуйста, введите число, мы проверим его корректность:");
                userInput = Console.ReadLine();

                bool success = int.TryParse(userInput, out number);
                
                if (success == true)
                {
                    isCorrecting = true;
                    userNumber = Convert.ToInt32(userInput);
                    Console.WriteLine($"Да, все верно, ваш  ввод действительно является числом {userNumber}");
                }
                else
                {
                    isCorrecting = false;
                    Console.WriteLine("Неверный ввод, Нажмите кнопку чтобы попробовать еще раз");
                }
                
                Console.ReadKey();
                Console.Clear();
            }
        }

    }
}

using System;

namespace TryParse
{
    class Program
    {
        static void Main(string[] args)
        {
            int userNumber = 0;
            ReadInt(ref userNumber);
            Console.WriteLine($"Число пользователя {userNumber}");
        }

        static int ReadInt(ref int number)
        {
            string userInput;
            int userNumber = 0;
            bool isWorking = true;
            bool isCorrecting;

            while (isWorking == true)
            {
                Console.Write("Пожалуйста, введите число, мы проверим его корректность:");
                userInput = Console.ReadLine();

                bool success = int.TryParse(userInput, out number);
                if (success == true)
                {
                    isCorrecting = true;
                }
                else
                {
                    isCorrecting = false;
                }

                if (isCorrecting == true)
                {
                    userNumber = Convert.ToInt32(userInput);
                    Console.WriteLine($"Да, все верно, ваш  ввод действительно является числом {userNumber}");
                    isWorking = false;
                }
                else
                {
                    Console.WriteLine("Неверный ввод, Нажмите кнопку чтобы попробовать еще раз");
                }
                Console.ReadKey();
                Console.Clear();
            }
            return userNumber;
        }

    }
}
